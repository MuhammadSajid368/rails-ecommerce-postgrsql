<div class="container my-4">
  <div class="card shadow-lg p-4 card-form">
    <h3 class="text-center mb-4">Add a Comment</h3>

    <%= form_with(model: [@product, @product.comments.new], html: { class: "form" }) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :content, "Comment:", class: "form-label" %>
        <%= f.text_area :content, class: "form-control", rows: 4 %>
      </div>
      
      <div class="form-group d-grid">
        <%= f.submit "Post Comment", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
