# Ignore bundler config.
/.bundle

# Ignore all logfiles and tempfiles.
/log/*
!/log/.keep
/tmp
!/tmp/.keep

# Ignore pidfiles, but keep the directory.
tmp/pids/*
!tmp/pids/
tmp/cache/*
!tmp/cache/
tmp/sockets/*
!tmp/sockets/

# Ignore uploaded files in development and test environments.
/storage/*
!/storage/.keep

# Ignore the master key file, which should be kept secret if using Rails encryption.
/config/master.key
/config/credentials.yml.enc

# Ignore sensitive environment files.
/.env
.env.*

# Ignore database config generated by Rails.
/config/database.yml

# Ignore all files in the node_modules and Yarn integrity file.
/node_modules
/yarn-error.log
/yarn-debug.log*
.yarn-integrity

# Ignore Sprockets cache.
/public/assets
.byebug_history

# Ignore any bundler-related files.
/vendor/bundle
/vendor/cache

# Ignore coverage reports generated by simplecov or other tools.
/coverage/

# Ignore any files generated by the Rails test suite.
/spec/examples.txt
/test/tmp
/test/version_tmp

# Ignore any files related to Rails credentials.
/config/credentials/*

# Ignore Rails secrets file.
/config/secrets.yml

# Ignore editor-specific files.
*~
*.swp
*.swo
*.orig

# Ignore macOS-specific files.
.DS_Store

# Ignore deployment-related files.
/config/deploy/*
!/config/deploy/.keep

# Ignore Docker-related files.
docker-compose.yml
Dockerfile
