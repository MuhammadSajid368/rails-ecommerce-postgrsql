<div class="container my-5">
    <h1 class="mb-4 text-center">Checkout</h1>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <%= form_for @order do |f| %>
          <div class="card mb-4">
            <div class="card-header">
              <h3>Shipping Address</h3>
            </div>
            <div class="card-body">
              <%= fields_for :shipping_address, @shipping_address do |s| %>
                <div class="mb-3">
                  <%= s.label :address, class: 'form-label' %>
                  <%= s.text_field :address, class: 'form-control' %>
                </div>
                <div class="mb-3">
                  <%= s.label :city, class: 'form-label' %>
                  <%= s.text_field :city, class: 'form-control' %>
                </div>
                <div class="mb-3">
                  <%= s.label :state, class: 'form-label' %>
                  <%= s.text_field :state, class: 'form-control' %>
                </div>
                <div class="mb-3">
                  <%= s.label :zip_code, class: 'form-label' %>
                  <%= s.text_field :zip_code, class: 'form-control' %>
                </div>
                <div class="mb-3">
                  <%= s.label :country, class: 'form-label' %>
                  <%= s.text_field :country, class: 'form-control' %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="card mb-4">
            <div class="card-header">
              <h3>Discount Code</h3>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <%= label_tag :discount_code, "Discount Code", class: 'form-label' %>
                <%= text_field_tag :discount_code, nil, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "Place Order", class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>