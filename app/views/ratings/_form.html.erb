<div class="container my-4">
  <div class="card shadow-lg p-4 card-form">
    <h3 class="text-center mb-4">Rate this Product</h3>

    <%= form_with(model: [@product, Rating.new], html: { class: "form" }) do |f| %>
      <div class="mb-3">
        <%= f.label :score, "Rating", class: "form-label" %>
        <%= f.number_field :score, min: 1, max: 5, step: 1, value: 1, class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Submit Rating", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
